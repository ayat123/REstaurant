<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_white"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:padding="5dp">

            <TextView
                android:id="@+id/txtdishid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100"
                android:textSize="18dp"
                android:padding="4dp"
                android:layout_weight="0.25"
                />


            <TextView
                android:id="@+id/txtdishname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="dish name"
                android:maxLines="2"
                android:gravity="center"
                android:layout_weight="0.7"
                android:textColor="@color/main_color_500"
                android:textSize="18dp"
                android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/imgddec"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@color/main_color_700"
                android:text="-"
                android:padding="3dp"
                android:textColor="@color/white" android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txtqty"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:text="1"
                android:textSize="18dp"
                />
            <Button
                android:id="@+id/imgdinc"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@color/main_color_700"
                android:text="+"
                android:padding="3dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                />




        </LinearLayout>

        <Button
            android:id="@+id/btndelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/btn_remove"
            android:visibility="visible"/>

    </LinearLayout>


</LinearLayout>