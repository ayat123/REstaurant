<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical" >
        <ImageView
            android:id="@+id/imgdishesimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="72dp"
            android:scaleType="centerCrop" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="12dp" >
        <TextView
        android:id="@+id/txtcustdishname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="dish name"
            android:maxLines="1"
            android:textColor="@color/main_color_500"
            android:textSize="18dp"
        android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtcustdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discription"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="normal"/>

    </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical" >

    <TextView
        android:id="@+id/txtcustdishprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Price"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/main_color_500"
        android:textSize="22dp"
        android:textStyle="bold"
       />
</LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/imgddec"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color_700"
            android:text="-"
            android:padding="7dp"
            android:textColor="@color/white" android:textSize="18dp"
            />

        <EditText
            android:id="@+id/edtqty"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:inputType="number"
            android:padding="10dp"
            android:text="1"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/imgdinc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color_700"
            android:text="+"
            android:padding="7dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            />


    </LinearLayout>

        <Button
            android:id="@+id/custadd"
            android:padding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/material_red_500"
            android:text="Select"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>