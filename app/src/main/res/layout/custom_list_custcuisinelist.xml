<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res/com.example.reeva.restaurant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




    <com.example.reeva.restaurant.view.ScaledLinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_white"
        android:padding="16dp"
        app:linear_layout_ratio="0.8" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
        android:id="@+id/imgcustcuisineimg"
        style="@style/ImageViewStyle"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:src="@drawable/mcurry"

              />

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/txtcustcuisinename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuisine Name"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:background="#80000000"
                android:gravity="bottom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </com.example.reeva.restaurant.view.ScaledLinearLayout>

</LinearLayout>